<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fusu.wechat.mapper.ItemMapper">
	<select id="queryItemByHot" parameterType="Item">
		SELECT from item ORDER BY #{hot} DESC LIMIT 5
	</select>
	<select id="queryItemByNew" parameterType="Item">
		SELECT from item ORDER BY #{new} DESC LIMIT 5
	</select>
</mapper>