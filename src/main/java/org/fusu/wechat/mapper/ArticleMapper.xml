<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fusu.wechat.mapper.ArticleMapper">
	<select id="queryArticleByHot" resultType="Article">
		SELECT * from article ORDER BY hot DESC LIMIT 5
	</select>
	<select id="queryArticleByNew" parameterType="Article">
		SELECT from article ORDER BY #{update_time} DESC LIMIT 5
	</select>
</mapper>